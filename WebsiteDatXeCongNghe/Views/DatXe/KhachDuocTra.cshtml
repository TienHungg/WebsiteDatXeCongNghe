            $("#chat-bubble-icon").draggable({
                containment: "window",
                scroll: false,
                start: function () {
                    // Add "draggable" class to the chat popup when dragging starts
                    $("#myForm").addClass("draggable");
                },
                stop: function () {
                    // Remove "draggable" class from the chat popup when dragging stops
                    $("#myForm").removeClass("draggable");
                }
            });
        });

    </script>
